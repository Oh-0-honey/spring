{{>layout/header}}

    <h1>Ver2. 스프링 부트로 시작하는 나의 웹 서비스</h1>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a><!-- 클릭하면 /posts/save로 이동하는 버튼 -->
            </div>
        </div>

        <br>
        <!--목록 출력 영역 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}<!-- posts라는 List를 순회(일종의 for문) -->
                <tr>
                    <td>{{id}}</td><!--{변수명}은 List에서 뽑아낸 필드 -->
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}

            </tbody>
        </table>
    </div>


{{>layout/footer}} <!-- 위 아래로 layout 디렉토리 아래 header, footer 머스테치 파일 로드 -->
