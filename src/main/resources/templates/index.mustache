{{>layout/header}}

    <h1>Ver3. 스프링 부트로 시작하는 나의 웹 서비스</h1>
    <div class="col-md-12">
        <!-- 로그인 기능 영역 -->
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a><!-- 클릭하면 /posts/save로 이동하는 버튼 -->
                {{#memberName}}<!--memberName의 true/false여부를 판단. 참거짓만 판단하므로 최종값을 넘겨줘야함--><!--userName하면 윈도우에선 윈도우 계정을 불러오는 오류가 있음-->
                    Logged in as: <span id="user">{{memberName}}</span><!--memberName이 있다면 노출시켜라-->
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a><!--스프링 시큐리티에서 기본적으로 제공하는 로그아웃-->

                {{/memberName}}

                {{^memberName}}<!--memberName이 존재하지 않는 경우-->
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a><!--스스에서 기본적으로 제공하는 로그인-->
                    <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">Naver Login</a>
                {{/memberName}}
            </div>
        </div>

        <br>
        <!--목록 출력 영역 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}<!-- posts라는 List를 순회(일종의 for문) -->
                <tr>
                    <td>{{id}}</td><!--{변수명}은 List에서 뽑아낸 필드 -->
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}

            </tbody>
        </table>
    </div>


{{>layout/footer}} <!-- 위 아래로 layout 디렉토리 아래 header, footer 머스테치 파일 로드 -->
